@page
@model MTM.Web.RazorPages.Pages.PetsModel
@{
    ViewData["Title"] = "Pets";
}


@section scripts {

    <environment include="Development">
        <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.11.2/jquery-ui.min.js"
                asp-fallback-src="~/lib/jquery-ui/jquery-ui.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.validator"
                crossorigin="anonymous"
                integrity="sha384-Fnqn3nxp3506LP/7Y3j/25BlWeA3PXTyT1l78LjECcPaKCV12TsZP7yyMxOe/G/k">
        </script>

        http://ajax.aspnetcdn.com/ajax/jquery.ui/1.11.2/themes/smoothness/jquery-ui.css

    </environment>
}

<h2>Pets</h2>

<div class="row">
    @Html.ActionLink("Create New", "Create")
</div>
<div class="row">

    @foreach (var item in Model.MyPets)
    {
        <div class="row">
            <div class="col-md-2">
                @item.PhotoUrl
            </div>
            <div class="col-md-2">
                @item.PetName
            </div>
            <div class="col-md-4">
                @item.PetProfile
            </div>
            <div class="col-md-4">
                <a href="javascript:void(null);" onclick="showPet(@item.AsJson());">Edit</a> |
                <a href="javascript:void(null);" onclick="showPetDelete(@item.AsJson());">Delete</a>
            </div>
        </div>
    }
</div>

<div id="dialog-create-update" title="Pet" style="display: none;">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.PetName"></label>
            <input id="PetName" asp-for="Input.PetName" class="form-control" />
            <span asp-validation-for="Input.PetName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.PetProfile"></label>
            <input id="PetProfile" asp-for="Input.PetProfile" class="form-control" />
            <span asp-validation-for="Input.PetProfile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.PhotoUrl"></label>
            <input id="PhototUrl" asp-for="Input.PhotoUrl" class="form-control" />
            <span asp-validation-for="Input.PhotoUrl" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        <button type="submit" class="btn btn-default">Cancel</button>
    </form>
</div>

<div id="dialog-delete" title="Confirm Delete" style="display: none;">
    <form method="post">
        <div class="form-group">
            <label id="PetNameDeleteMsg"></label>
        </div>
        <button type="submit" class="btn btn-default">Yes</button>
        <button type="submit" class="btn btn-default">Cancel</button>
    </form>
</div>

